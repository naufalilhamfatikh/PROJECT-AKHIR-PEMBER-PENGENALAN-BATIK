<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".batik_kraton">

    <ImageView
        android:id="@+id/idfoto_kraton"
        android:layout_width="377dp"
        android:layout_height="201dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/batikkraton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idnama_kraton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idfoto_kraton"
        android:layout_marginTop="8dp"
        android:text="BATIK KRATON"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/idfoto_kraton"
        app:layout_constraintTop_toBottomOf="@+id/idfoto_kraton"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/idasal_kraton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idfoto_kraton"
        android:layout_marginTop="12dp"
        android:text="Asal Daerah Yogyakarta"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/idnama_kraton"
        app:layout_constraintTop_toBottomOf="@+id/idnama_kraton"
        tools:ignore="RtlCompat" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="330dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/iddeskripsi_batikkraton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idfoto_kraton"
            android:layout_margin="10dp"
            android:layout_marginTop="12dp"
            android:text="@string/deskripsi_kraton"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idasal_kraton"
            tools:ignore="RtlCompat" />
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSharekraton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/baseline_share_24" />

</androidx.constraintlayout.widget.ConstraintLayout>