<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".batik_kawung">

    <ImageView
        android:id="@+id/idfoto_kawung"
        android:layout_width="377dp"
        android:layout_height="201dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/motifkawung"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idnama_kawung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idfoto_kawung"
        android:layout_marginTop="8dp"
        android:text="BATIK KAWUNG"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/idfoto_kawung"
        app:layout_constraintTop_toBottomOf="@+id/idfoto_kawung"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/idasal_kawung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idnama_kawung"
        android:layout_marginTop="12dp"
        android:text="Asal Jawa Tengah"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/idnama_kawung"
        app:layout_constraintTop_toBottomOf="@+id/idnama_kawung"
        tools:ignore="RtlCompat" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.087">

        <TextView
            android:id="@+id/iddeskripsi_parang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/idfoto_kawung"
            android:layout_margin="10dp"
            android:layout_marginTop="12dp"
            android:text="@string/deskripsi_kawung"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idasal_parang"
            tools:ignore="RtlCompat" />
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnShare_kawung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/baseline_share_24" />

</androidx.constraintlayout.widget.ConstraintLayout>